<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Appointment Sequence -->
        <record id="seq_clinic_appointment" model="ir.sequence">
            <field name="name">Clinic Appointment</field>
            <field name="code">clinic.appointment</field>
            <field name="prefix">APT</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="company_id" eval="False"/>
        </record>

    <!-- Prescription sequence removed; prescriptions are embedded into appointments -->

        <!-- Patient Sequence -->
        <record id="seq_clinic_patient" model="ir.sequence">
            <field name="name">Clinic Patient</field>
            <field name="code">clinic.patient</field>
            <field name="prefix">PAT</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="company_id" eval="False"/>
        </record>

    </data>
</odoo>
