<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Clinic Management Menu -->
    <menuitem id="menu_clinic_root" 
              name="Clinic Management"
              web_icon="clinic_management,static/description/icon.png"
              sequence="10"/>

    <!-- ========== ROLE-BASED DASHBOARDS ========== -->
    
    <!-- Receptionist Dashboard -->
    <menuitem id="menu_receptionist_dashboard"
              name="Receptionist Dashboard"
              parent="menu_clinic_root"
              action="action_receptionist_dashboard"
              sequence="1"
              groups="group_clinic_receptionist"/>

    <!-- Doctor Dashboard -->
    <menuitem id="menu_doctor_dashboard"
              name="Doctor Dashboard"
              parent="menu_clinic_root"
              action="action_doctor_dashboard"
              sequence="2"
              groups="group_clinic_doctor"/>

    <!-- Admin Dashboard -->
    <menuitem id="menu_admin_dashboard"
              name="Admin Dashboard"
              parent="menu_clinic_root"
              action="action_admin_dashboard"
              sequence="3"
              groups="group_clinic_admin"/>

    <!-- ========== APPOINTMENTS SECTION ========== -->
    
    <!-- Appointments Menu (Main Group) -->
    <menuitem id="menu_clinic_appointments"
              name="Appointments"
              parent="menu_clinic_root"
              sequence="10"
              groups="group_clinic_receptionist,group_clinic_doctor,group_clinic_admin"/>
    
