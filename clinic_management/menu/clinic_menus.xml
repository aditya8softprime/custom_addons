              name="Doctor Utilization"
              parent="menu_clinic_reports"
              action="action_admin_doctor_utilization"
              groups="group_clinic_admin"
              sequence="3"/>

    <menuitem id="menu_service_popularity"
              name="Service Popularity"
              parent="menu_clinic_reports"
              action="action_admin_service_popularity"
