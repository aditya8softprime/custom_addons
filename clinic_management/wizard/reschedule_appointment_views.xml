<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_appointment_reschedule_wizard_form" model="ir.ui.view">
        <field name="name">appointment.reschedule.wizard.form</field>
        <field name="model">appointment.reschedule.wizard</field>
        <field name="arch" type="xml">
            <form string="Reschedule Appointment">
                <sheet>
                    <group>
                        <group>
                            <field name="appointment_id" readonly="1"/>
                            <field name="patient_id" readonly="1"/>
                            <field name="doctor_id"/>
                            <field name="original_date" readonly="1"/>
                            <field name="original_slot_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="new_date"/>
                            <field name="new_slot_id" 
                                   domain="[('doctor_id', '=', doctor_id), ('status', '=', 'available')]"/>
                            <field name="reason" placeholder="Reason for rescheduling"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_reschedule" string="Reschedule" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
