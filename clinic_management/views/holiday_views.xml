<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_clinic_holiday_form" model="ir.ui.view">
        <field name="name">clinic.holiday.form</field>
        <field name="model">clinic.holiday</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_approve" string="Approve" type="object" 
                            invisible="state != 'draft'" class="btn-primary" groups="clinic_management.group_clinic_admin"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            invisible="state != 'draft'" class="btn-danger" groups="clinic_management.group_clinic_admin"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="doctor_id"/>
                            <field name="leave_type"/>
                            <field name="from_date"/>
                            <field name="to_date"/>
                        </group>
                        <group>
                            <field name="reason" placeholder="Reason for leave"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_clinic_holiday_list" model="ir.ui.view">
        <field name="name">clinic.holiday.list</field>
        <field name="model">clinic.holiday</field>
        <field name="arch" type="xml">
            <list string="Doctor Leaves/Holidays">
                <field name="doctor_id"/>
                <field name="leave_type"/>
                <field name="from_date"/>
                <field name="to_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_clinic_holiday_calendar" model="ir.ui.view">
        <field name="name">clinic.holiday.calendar</field>
        <field name="model">clinic.holiday</field>
        <field name="arch" type="xml">
            <calendar string="Doctor Leaves" date_start="from_date" date_stop="to_date" color="doctor_id" mode="month">
                <field name="doctor_id"/>
                <field name="leave_type"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <record id="view_clinic_holiday_search" model="ir.ui.view">
        <field name="name">clinic.holiday.search</field>
        <field name="model">clinic.holiday</field>
        <field name="arch" type="xml">
            <search>
                <field name="doctor_id"/>
                <field name="from_date"/>
                <field name="to_date"/>
                <separator/>
                <filter string="Upcoming" name="upcoming" domain="[('from_date', '>=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Past" name="past" domain="[('to_date', '&lt;', context_today().strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_doctor" string="Doctor" context="{'group_by': 'doctor_id'}"/>
                    <filter name="group_by_state" string="Status" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_clinic_holiday" model="ir.actions.act_window">
        <field name="name">Doctor Leaves/Holidays</field>
        <field name="res_model">clinic.holiday</field>
        <field name="view_mode">calendar,list,form</field>
        <field name="context">{'search_default_upcoming': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No leaves/holidays defined!
            </p>
            <p>
                Create leaves/holidays for doctors to manage their unavailability.
            </p>
        </field>
    </record>
</odoo>
