<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Website Menu Items -->
    <record id="menu_clinic_home" model="website.menu">
        <field name="name">Home</field>
        <field name="url">/clinic</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">50</field>
    </record>

    <!-- Services Menu with Dropdown -->
    <record id="menu_clinic_services" model="website.menu">
        <field name="name">Services</field>
        <field name="url">/clinic/services</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">51</field>
    </record>

    <!-- Doctors Menu with Dropdown -->
    <record id="menu_clinic_doctors" model="website.menu">
        <field name="name">Doctors</field>
        <field name="url">/clinic/doctors</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">52</field>
    </record>

    <record id="menu_clinic_booking" model="website.menu">
        <field name="name">Booking</field>
        <field name="url">/clinic/booking</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">53</field>
    </record>
    
    <record id="menu_clinic_about" model="website.menu">
        <field name="name">About Us</field>
        <field name="url">/clinic/about</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">54</field>
    </record>

    <record id="menu_clinic_contact" model="website.menu">
        <field name="name">Contact Us</field>
        <field name="url">/clinic/contact</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">55</field>
    </record>
    
    <!-- Website Configuration Settings -->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.clinic</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="30"/>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='website_settings'][1]" position="inside">
                <setting id="clinic_website_settings" string="Clinic Management" help="Enable clinic website and appointment booking">
                    <field name="module_clinic_management"/>
                    <div class="content-group" invisible="module_clinic_management == False">
                        <div class="mt16">
                            <field name="clinic_allow_online_booking" class="oe_inline"/>
                            <label for="clinic_allow_online_booking"/>
                        </div>
                        <div class="mt16" invisible="clinic_allow_online_booking == False">
                            <label for="clinic_booking_confirmation_email" class="oe_inline"/>
                            <field name="clinic_booking_confirmation_email" class="oe_inline"/>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.clinic</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="30"/>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='website_settings'][1]" position="inside">
                <setting id="clinic_website_settings" string="Clinic Management" help="Enable clinic website and appointment booking">
                    <field name="module_clinic_management"/>
                    <div class="content-group" invisible="module_clinic_management == False">
                        <div class="mt16">
                            <field name="clinic_allow_online_booking" class="oe_inline"/>
                            <label for="clinic_allow_online_booking"/>
                        </div>
                        <div class="mt16" invisible="clinic_allow_online_booking == False">
                            <label for="clinic_booking_confirmation_email" class="oe_inline"/>
                            <field name="clinic_booking_confirmation_email" class="oe_inline"/>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
    
    <!-- Fields are defined in the Python class ResConfigSettings in res_config_settings.py -->
</odoo>
