<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_clinic_days_form" model="ir.ui.view">
        <field name="name">clinic.days.form</field>
        <field name="model">clinic.days</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="sequence"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_clinic_days_list" model="ir.ui.view">
        <field name="name">clinic.days.list</field>
        <field name="model">clinic.days</field>
        <field name="arch" type="xml">
            <list string="Days">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <record id="action_clinic_days" model="ir.actions.act_window">
        <field name="name">Days</field>
        <field name="res_model">clinic.days</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No days defined!
            </p>
            <p>
                Days are predefined in the system and should be loaded automatically.
            </p>
        </field>
    </record>
</odoo>
