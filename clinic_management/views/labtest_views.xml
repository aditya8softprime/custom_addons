<?xml version="1.0" encoding="utf-8"?>
<odoo>
       <!-- Lab Test Views -->
    <record id="view_clinic_lab_test_form" model="ir.ui.view">
        <field name="name">clinic.lab.test.form</field>
        <field name="model">clinic.lab.test</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_complete" string="Mark as Completed" type="object" 
                            invisible="state != 'requested'" class="btn-primary"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            invisible="state != 'requested'" class="btn-danger"/>
                    <field name="state" widget="statusbar" statusbar_visible="requested,completed,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Test Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="doctor_id"/>
                            <field name="test_date"/>
                        </group>
                        <group>
                            <field name="appointment_id" 
                                   domain="[('patient_id', '=', patient_id), ('doctor_id', '=', doctor_id)]"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes" placeholder="Additional notes for the lab test"/>
                        </page>
                        <page string="Results" invisible="state != 'completed'">
                            <group>
                                <field name="result" placeholder="Test results"/>
                                <field name="result_document" filename="result_document_filename"/>
                                <field name="result_document_filename" invisible="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_clinic_lab_test_list" model="ir.ui.view">
        <field name="name">clinic.lab.test.list</field>
        <field name="model">clinic.lab.test</field>
        <field name="arch" type="xml">
            <list string="Lab Tests">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="test_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_clinic_lab_test_search" model="ir.ui.view">
        <field name="name">clinic.lab.test.search</field>
        <field name="model">clinic.lab.test</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <separator/>
                <filter string="Requested" name="requested" domain="[('state', '=', 'requested')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_patient" string="Patient" context="{'group_by': 'patient_id'}"/>
                    <filter name="group_by_doctor" string="Doctor" context="{'group_by': 'doctor_id'}"/>
                    <filter name="group_by_state" string="Status" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_clinic_lab_test" model="ir.actions.act_window">
        <field name="name">Lab Tests</field>
        <field name="res_model">clinic.lab.test</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_requested': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first lab test!
            </p>
            <p>
                Create lab test requests for your patients.
            </p>
        </field>
    </record>
</odoo>
