<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_clinic_service_form" model="ir.ui.view">
        <field name="name">clinic.service.form</field>
        <field name="model">clinic.service</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_appointments" type="object" 
                                class="oe_stat_button" icon="fa-calendar">
                            <field name="appointment_count" widget="statinfo" string="Appointments"/>
                        </button>
                    </div>
                    <field name="icon" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Service Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="price"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                        <group>
                            <field name="doctor_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Service description for website"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_clinic_service_list" model="ir.ui.view">
        <field name="name">clinic.service.list</field>
        <field name="model">clinic.service</field>
        <field name="arch" type="xml">
            <list string="Services/Treatments">
                <field name="name"/>
                <field name="price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="doctor_ids" widget="many2many_tags"/>
                <field name="color" widget="color"/>
                <field name="active" invisible="1"/>
            </list>
        </field>
    </record>

    <record id="view_clinic_service_kanban" model="ir.ui.view">
        <field name="name">clinic.service.kanban</field>
        <field name="model">clinic.service</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="icon"/>
                <field name="price"/>
                <field name="currency_id"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image: url(#{kanban_image('clinic.service', 'icon', id, placeholder)})" />
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div t-if="record.price.raw_value">
                                    <field name="price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </div>
                                <div t-if="record.doctor_ids.raw_value &amp;&amp; record.doctor_ids.raw_value.length > 0">
                                    <strong>Doctors: </strong><field name="doctor_ids" widget="many2many_tags"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_clinic_service_search" model="ir.ui.view">
        <field name="name">clinic.service.search</field>
        <field name="model">clinic.service</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Service"/>
                <field name="doctor_ids"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_doctor" string="Doctor" context="{'group_by': 'doctor_ids'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_clinic_service" model="ir.actions.act_window">
        <field name="name">Services/Treatments</field>
        <field name="res_model">clinic.service</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first service!
            </p>
            <p>
                Define the services/treatments your clinic offers.
            </p>
        </field>
    </record>
</odoo>
