<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Custom HTTP Error Template -->
    <template id="clinic_http_error" name="Clinic HTTP Error">
        <t t-call="website.layout">
            <div class="container my-5">
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
                        <div class="card border-danger">
                            <div class="card-header bg-danger text-white">
                                <h2 class="mb-0"><t t-esc="status_code or '500'"/> - <t t-esc="status_message or 'Error'"/></h2>
                            </div>
                            <div class="card-body">
                                <div class="alert alert-danger">
                                    <t t-if="error_message">
                                        <p><t t-esc="error_message"/></p>
                                    </t>
                                    <t t-else="">
                                        <p>An error occurred while processing your request. Please try again later.</p>
                                    </t>
                                </div>
                                <div class="mt-4">
                                    <a href="/clinic" class="btn btn-primary">Return to Clinic Homepage</a>
                                    <a href="/clinic/booking" class="btn btn-outline-primary ml-2">Return to Booking Form</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
