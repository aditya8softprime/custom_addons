<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Prescription Form View -->
    <record id="view_clinic_prescription_form" model="ir.ui.view">
        <field name="name">clinic.prescription.form</field>
        <field name="model">clinic.prescription</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirm" type="object" 
                           class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_send_prescription_email" string="Send Email" type="object" 
                           class="oe_highlight" invisible="state not in ['confirmed']"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                           invisible="state in ['cancelled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,sent"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Prescription #"/>
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id" options="{'no_create': True}"/>
                            <field name="doctor_id" options="{'no_create': True}"/>
                            <field name="appointment_id" options="{'no_create': True}" 
                                   domain="[('patient_id', '=', patient_id), ('doctor_id', '=', doctor_id)]"/>
                            <field name="prescription_date"/>
                        </group>
                        <group>
                            <field name="prescription_type"/>
                            <field name="total_amount" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Digital Prescription" invisible="prescription_type != 'digital'">
                            <field name="medication_ids">
                                <list editable="bottom">
                                    <field name="product_id" 
                                           domain="[('type', '=', 'consu')]"
                                           options="{'no_create': True}"/>
                                    <field name="medicine_name"/>
                                    <field name="dosage"/>
                                    <field name="frequency"/>
                                    <field name="duration"/>
                                    <field name="quantity"/>
                                    <field name="unit_price" widget="monetary"/>
                                    <field name="subtotal" widget="monetary" readonly="1"/>
                                    <field name="currency_id" invisible="1"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Handwritten/Stylus" invisible="prescription_type != 'handwritten'">
                            <group>
                                <field name="stylus_notes" widget="html" placeholder="Write prescription notes here using stylus..."/>
                                <field name="prescription_image" widget="image" class="oe_avatar"/>
                                <field name="prescription_image_filename" invisible="1"/>
                            </group>
                            <field name="medication_ids">
                                <list editable="bottom">
                                    <field name="product_id" 
                                           domain="[('type', '=', 'consu')]"
                                           options="{'no_create': True}"/>
                                    <field name="medicine_name"/>
                                    <field name="dosage"/>
                                    <field name="frequency"/>
                                    <field name="duration"/>
                                    <field name="quantity"/>
                                    <field name="unit_price" widget="monetary"/>
                                    <field name="subtotal" widget="monetary" readonly="1"/>
                                    <field name="currency_id" invisible="1"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Scanned Document" invisible="prescription_type != 'scan'">
                            <group>
                                <field name="prescription_image" widget="image" class="oe_avatar"/>
                                <field name="prescription_image_filename" invisible="1"/>
                            </group>
                            <field name="medication_ids">
                                <list editable="bottom">
                                    <field name="product_id" 
                                           domain="[('type', '=', 'consu')]"
                                           options="{'no_create': True}"/>
                                    <field name="medicine_name"/>
                                    <field name="dosage"/>
                                    <field name="frequency"/>
                                    <field name="duration"/>
                                    <field name="quantity"/>
                                    <field name="unit_price" widget="monetary"/>
                                    <field name="subtotal" widget="monetary" readonly="1"/>
                                    <field name="currency_id" invisible="1"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Notes">
                            <field name="notes" placeholder="Additional prescription notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Prescription List View -->
    <record id="view_clinic_prescription_list" model="ir.ui.view">
        <field name="name">clinic.prescription.list</field>
        <field name="model">clinic.prescription</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list decoration-success="state=='confirmed'" decoration-info="state=='sent'" 
                 decoration-warning="state=='draft'" decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="prescription_date"/>
                <field name="prescription_type"/>
                <field name="total_amount" widget="monetary" sum="Total Revenue"/>
                <field name="state" widget="badge" 
                      decoration-success="state=='confirmed'" 
                      decoration-info="state=='sent'"
                      decoration-warning="state=='draft'"
                      decoration-danger="state=='cancelled'"/>
                <field name="currency_id" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Prescription Search View -->
    <record id="view_clinic_prescription_search" model="ir.ui.view">
        <field name="name">clinic.prescription.search</field>
        <field name="model">clinic.prescription</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="prescription_date"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]"/>
                <separator/>
                <filter string="Digital" name="digital" domain="[('prescription_type', '=', 'digital')]"/>
                <filter string="Handwritten" name="handwritten" domain="[('prescription_type', '=', 'handwritten')]"/>
                <filter string="Scanned" name="scan" domain="[('prescription_type', '=', 'scan')]"/>
                <separator/>
                <filter string="Today" name="today" domain="[('prescription_date', '=', context_today())]"/>
                <filter string="This Week" name="this_week" domain="[('prescription_date', '&gt;=', (context_today() - datetime.timedelta(days=7)))]"/>
                <filter string="This Month" name="this_month" domain="[('prescription_date', '&gt;=', (context_today() - datetime.timedelta(days=30)))]"/>
                <group expand="0" string="Group By">
                    <filter string="Patient" name="group_patient" context="{'group_by': 'patient_id'}"/>
                    <filter string="Doctor" name="group_doctor" context="{'group_by': 'doctor_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'prescription_type'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'prescription_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Prescription Medication Form View -->
    <record id="view_clinic_prescription_medication_form" model="ir.ui.view">
        <field name="name">clinic.prescription.medication.form</field>
        <field name="model">clinic.prescription.medication</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="product_id" options="{'no_create': True}"/>
                            <field name="medicine_name"/>
                            <field name="dosage"/>
                            <field name="frequency"/>
                            <field name="duration"/>
                        </group>
                        <group>
                            <field name="quantity"/>
                            <field name="unit_price" widget="monetary"/>
                            <field name="subtotal" widget="monetary" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <field name="notes" placeholder="Special instructions for this medication..."/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Prescription Medication List View -->
    <record id="view_clinic_prescription_medication_list" model="ir.ui.view">
        <field name="name">clinic.prescription.medication.list</field>
        <field name="model">clinic.prescription.medication</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="product_id"/>
                <field name="medicine_name"/>
                <field name="dosage"/>
                <field name="frequency"/>
                <field name="duration"/>
                <field name="quantity"/>
                <field name="unit_price" widget="monetary"/>
                <field name="subtotal" widget="monetary"/>
                <field name="currency_id" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Prescription Action -->
    <record id="action_clinic_prescription" model="ir.actions.act_window">
        <field name="name">Prescriptions</field>
        <field name="res_model">clinic.prescription</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_clinic_prescription_list"/>
        <field name="search_view_id" ref="view_clinic_prescription_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first prescription!
            </p>
            <p>
                Create and manage patient prescriptions with digital entry, handwritten notes, or scanned documents.
            </p>
        </field>
    </record>    
</odoo>
