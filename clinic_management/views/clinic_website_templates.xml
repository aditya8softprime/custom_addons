    <!-- Booking Form -->
    <template id="booking_form" name="Appointment Booking Form">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container mt-5">
                    <div class="row">
                        <div class="col-md-12">
                            <h1 class="text-center mb-5">Book Your Appointment</h1>
                            <div class="row justify-content-center">
                                <div class="col-md-8">
                                    <div class="card">
                                        <div class="card-header bg-primary text-white">
                                            <h5 class="mb-0">Appointment Details</h5>
                                        </div>
                                        <div class="card-body">
                                            <form action="/clinic/booking/submit" method="post" enctype="multipart/form-data">
                                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                                
                                                <div class="row">
                                                    <div class="form-group col-md-6 mb-3">
                                                        <label for="patient_name">Patient Name *</label>
                                                        <input type="text" class="form-control" id="patient_name" name="patient_name" required="required"/>
                                                    </div>
                                                    <div class="form-group col-md-6 mb-3">
                                                        <label for="phone">Phone Number *</label>
                                                        <input type="tel" class="form-control" id="phone" name="phone" required="required"/>
                                                    </div>
                                                </div>
                                                
                                                <div class="row">
                                                    <div class="form-group col-md-6 mb-3">
                                                        <label for="email">Email</label>
                                                        <input type="email" class="form-control" id="email" name="email"/>
                                                    </div>
                                                    <div class="form-group col-md-6 mb-3">
                                                        <label for="age">Age *</label>
                                                        <input type="number" class="form-control" id="age" name="age" min="1" max="120" required="required"/>
                                                    </div>
                                                </div>
                                                
                                                <div class="row">
                                                    <div class="form-group col-md-6 mb-3">
                                                        <label for="gender">Gender *</label>
                                                        <select class="form-control" id="gender" name="gender" required="required">
                                                            <option value="">Select Gender</option>
                                                            <option value="male">Male</option>
                                                            <option value="female">Female</option>
                                                            <option value="other">Other</option>
                                                        </select>
                                                    </div>
                                                    <div class="form-group col-md-6 mb-3">
                                                        <label for="service_id">Service Required *</label>
                                                        <select class="form-control" id="service_id" name="service_id" required="required">
                                                            <option value="">Select Service</option>
                                                            <t t-foreach="services" t-as="service">
                                                                <option t-att-value="service.id" t-esc="service.name"/>
                                                            </t>
                                                        </select>
                                                    </div>
                                                </div>
                                                
                                                <div class="row">
                                                    <div class="form-group col-md-6 mb-3">
                                                        <label for="doctor_id">Preferred Doctor *</label>
                                                        <select class="form-control" id="doctor_id" name="doctor_id" required="required">
                                                            <option value="">First select a service</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                
                                                <div class="row">
                                                    <div class="form-group col-md-6 mb-3">
                                                        <label for="appointment_date">Preferred Date *</label>
                                                        <input type="date" class="form-control" id="appointment_date" name="appointment_date" required="required"/>
                                                    </div>
                                                    <div class="form-group col-md-6 mb-3">
                                                        <label for="slot_id">Available Time Slots *</label>
                                                        <select class="form-control" id="slot_id" name="slot_id" required="required">
                                                            <option value="">First select doctor and date</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                
                                                <div class="form-group mb-3">
                                                    <label for="symptom">Symptoms / Reason for Visit *</label>
                                                    <textarea class="form-control" id="symptom" name="symptom" rows="3" placeholder="Please describe your symptoms..." required="required"></textarea>
                                                </div>
                                                
                                                <div class="text-center">
                                                    <button type="submit" class="btn btn-primary btn-lg">Submit Appointment Request</button>
                                                    <div class="mt-2">
                                                        <small class="text-muted">* Required fields</small>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <script>
                // Add JavaScript for dynamic slot loading
                document.addEventListener('DOMContentLoaded', function() {
                    const serviceSelect = document.getElementById('service_id');
                    const doctorSelect = document.getElementById('doctor_id');
                    const dateInput = document.getElementById('appointment_date');
                    const slotSelect = document.getElementById('slot_id');
                    
                    // Load doctors when service is selected
                    function loadDoctors() {
                        const serviceId = serviceSelect.value;
                        
                        if (serviceId) {
                            doctorSelect.innerHTML = '<option value="">Loading...</option>';
                            slotSelect.innerHTML = '<option value="">First select doctor and date</option>';
                            
                            // Make AJAX request to get doctors for this service
                            fetch('/clinic/booking/doctors', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json',
                                    'X-Requested-With': 'XMLHttpRequest'
                                },
                                body: JSON.stringify({
                                    jsonrpc: '2.0',
                                    method: 'call',
                                    params: {
                                        service_id: serviceId
                                    }
                                })
                            })
                            .then(response => response.json())
                            .then(data => {
                                doctorSelect.innerHTML = '<option value="">Select Doctor</option>';
                                if (data.result &amp;&amp; data.result.length > 0) {
                                    data.result.forEach(doctor => {
                                        const option = document.createElement('option');
                                        option.value = doctor.id;
                                        option.textContent = 'Dr. ' + doctor.name + ' - ' + doctor.specializations;
                                        doctorSelect.appendChild(option);
                                    });
                                } else {
                                    doctorSelect.innerHTML = '<option value="">No doctors available for this service</option>';
                                }
                            })
                            .catch(error => {
                                console.error('Error loading doctors:', error);
                                doctorSelect.innerHTML = '<option value="">Error loading doctors</option>';
                            });
                        } else {
                            doctorSelect.innerHTML = '<option value="">First select a service</option>';
                            slotSelect.innerHTML = '<option value="">First select doctor and date</option>';
                        }
                    }
                    
                    function loadSlots() {
                        const doctorId = doctorSelect.value;
                        const date = dateInput.value;
                        
                        if (doctorId &amp;&amp; date) {
                            // Clear slots
                            slotSelect.innerHTML = '<option value="">Loading...</option>';
                            
                            // Make AJAX request to get slots
                            fetch('/clinic/booking/slots', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json',
                                    'X-Requested-With': 'XMLHttpRequest'
                                },
                                body: JSON.stringify({
                                    jsonrpc: '2.0',
                                    method: 'call',
                                    params: {
                                        doctor_id: doctorId,
                                        date_str: date
                                    }
                                })
                            })
                            .then(response => response.json())
                            .then(data => {
                                slotSelect.innerHTML = '<option value="">Select Time Slot</option>';
                                if (data.result &amp;&amp; data.result.length > 0) {
                                    data.result.forEach(slot => {
                                        const option = document.createElement('option');
                                        option.value = slot.id;
                                        option.textContent = slot.start_time + ' - ' + slot.end_time;
                                        slotSelect.appendChild(option);
                                    });
                                } else {
                                    slotSelect.innerHTML = '<option value="">No slots available</option>';
                                }
                            })
                            .catch(error => {
                                console.error('Error loading slots:', error);
                                slotSelect.innerHTML = '<option value="">Error loading slots</option>';
                            });
                        } else {
                            slotSelect.innerHTML = '<option value="">First select doctor and date</option>';
                        }
                    }
                    
                    serviceSelect.addEventListener('change', loadDoctors);
                    doctorSelect.addEventListener('change', loadSlots);
                    dateInput.addEventListener('change', loadSlots);
                    
                    // Set minimum date to today
                    const today = new Date().toISOString().split('T')[0];
                    dateInput.setAttribute('min', today);
                });
            </script>
        </t>
    </template>

