<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Clinic Website Settings Form View -->
    <record id="view_clinic_website_settings_form" model="ir.ui.view">
        <field name="name">clinic.website.settings.form</field>
        <field name="model">clinic.website.settings</field>
        <field name="arch" type="xml">
            <form string="Clinic Website Configuration">
                <header>
                    <button name="fetch_company_details" string="🔄 Fetch Company Details" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <p class="text-muted">Configure your clinic website in 3 simple steps</p>
                    </div>
                    
                    <notebook>
                        <!-- STEP 1: CLINIC INFO SETUP -->
                        <page string="📋 Step 1: Clinic Info Setup" name="step1_clinic_info">
                            <div class="alert alert-info" role="alert">
                                <strong>Step 1:</strong> Set up your basic clinic information. You can auto-fetch details from your company settings.
                            </div>
                            
                            <group>
                                <field name="auto_fetch_company_details"/>
                            </group>
                            
                            <group string="Basic Clinic Information" col="2">
                                <group>
                                    <field name="clinic_name" required="1"/>
                                    <field name="phone" required="1"/>
                                    <field name="email" required="1"/>
                                    <field name="website_url"/>
                                    <field name="emergency_phone"/>
                                    <field name="show_emergency_contact"/>
                                </group>
                                <group>
                                    <field name="clinic_logo" widget="image" class="oe_avatar"/>
                                </group>
                            </group>
                            
                            <group string="Address Information">
                                <field name="address" placeholder="Enter complete clinic address..." nolabel="1"/>
                            </group>
                        </page>
                        
                        <!-- STEP 2: THEME SELECTION -->
                        <page string="🎨 Step 2: Theme Selection" name="step2_theme">
                            <div class="alert alert-info" role="alert">
                                <strong>Step 2:</strong> Choose your website theme and colors. Select from predefined themes or create custom colors.
                            </div>
                            
                            <group string="Theme Selection">
                                <field name="theme_name" widget="radio" options="{'horizontal': true}"/>
                            </group>
                            
                            <group string="Primary Brand Color">
                                <field name="primary_color" widget="color"/>
                            </group>
                            
                            <group string="Custom Colors (Advanced)" invisible="theme_name != 'custom'" col="4">
                                <field name="secondary_color" widget="color"/>
                                <field name="accent_color" widget="color"/>
                                <field name="text_color" widget="color"/>
                                <field name="background_color" widget="color"/>
                                <field name="header_bg_color" widget="color"/>
                                <field name="footer_bg_color" widget="color"/>
                            </group>
                        </page>
                        
                        <!-- STEP 3: WEBSITE CONTENT INPUT -->
                        <page string="📝 Step 3: Website Content" name="step3_content">
                            <div class="alert alert-info" role="alert">
                                <strong>Step 3:</strong> Configure your website content including banners, about us, images, and social media.
                            </div>
                            
                            <!-- About Us Section -->
                            <group string="About Us Section" col="1">
                                <field name="about_us_title"/>
                                <field name="about_us_content" placeholder="Write about your clinic, mission, values, and what makes you special..." options="{'collaborative': true, 'resizable': true}" nolabel="1"/>
                            </group>
                            
                            <!-- Banner and Tagline -->
                            <group string="Banner and Tagline" col="2">
                                <group>
                                    <field name="tagline" placeholder="e.g., Your Health is Our Priority"/>
                                    <field name="clinic_tagline" placeholder="e.g., Providing Quality Healthcare Since 1995"/>
                                </group>
                                <group>
                                    <field name="banner_image" widget="image"/>
                                </group>
                            </group>
                            
                            <!-- Opening Hours -->
                            <group string="Opening Hours" col="1">
                                <field name="show_opening_hours"/>
                                <field name="opening_hours_title" invisible="not show_opening_hours"/>
                            </group>
                            <group invisible="not show_opening_hours" col="4">
                                <field name="monday_hours"/>
                                <field name="tuesday_hours"/>
                                <field name="wednesday_hours"/>
                                <field name="thursday_hours"/>
                                <field name="friday_hours"/>
                                <field name="saturday_hours"/>
                                <field name="sunday_hours"/>
                                <div/>
                            </group>
                            
                            <!-- Social Media Links -->
                            <group string="Social Media Links" col="1">
                                <field name="show_social_media"/>
                                <field name="social_media_location" invisible="not show_social_media"/>
                            </group>
                            <group invisible="not show_social_media" col="3">
                                <field name="facebook_url" placeholder="https://facebook.com/yourclinic"/>
                                <field name="instagram_url" placeholder="https://instagram.com/yourclinic"/>
                                <field name="twitter_url" placeholder="https://twitter.com/yourclinic"/>
                                <field name="linkedin_url" placeholder="https://linkedin.com/company/yourclinic"/>
                                <field name="youtube_url" placeholder="https://youtube.com/yourclinic"/>
                                <field name="whatsapp_number" placeholder="+91XXXXXXXXXX"/>
                            </group>
                        </page>


                        

                        <page>
                            <!-- Social Media Links -->
                            <group string="Social Media Links" col="1">
                                <field name="show_social_media"/>
                                <field name="social_media_location" invisible="not show_social_media"/>
                            </group>
                            <group invisible="not show_social_media" col="3">
                                <field name="facebook_url" placeholder="https://facebook.com/yourclinic"/>
                                <field name="instagram_url" placeholder="https://instagram.com/yourclinic"/>
                                <field name="twitter_url" placeholder="https://twitter.com/yourclinic"/>
                                <field name="linkedin_url" placeholder="https://linkedin.com/company/yourclinic"/>
                                <field name="youtube_url" placeholder="https://youtube.com/yourclinic"/>
                                <field name="whatsapp_number" placeholder="+91XXXXXXXXXX"/>
                            </group>
                        </page>
                        
                        <!-- IMAGE GALLERIES -->
                        <page string="🏥 Clinic and Treatment Images" name="image_galleries">
                            <div class="alert alert-info" role="alert">
                                <strong>Image Galleries:</strong> Upload images of your clinic facilities and treatments to showcase your services.
                            </div>
                            
                            <!-- Clinic Images Gallery -->
                            <group string="Clinic Images Gallery" col="1">
                                <field name="show_clinic_gallery"/>
                                <field name="clinic_images_title" invisible="not show_clinic_gallery"/>
                            </group>
                            <group invisible="not show_clinic_gallery" col="3">
                                <field name="clinic_image_1" widget="image"/>
                                <field name="clinic_image_2" widget="image"/>
                                <field name="clinic_image_3" widget="image"/>
                                <field name="clinic_image_4" widget="image"/>
                                <field name="clinic_image_5" widget="image"/>
                                <field name="clinic_image_6" widget="image"/>
                            </group>
                            
                            <!-- Treatment Images -->
                            <group string="Treatment Images Gallery" col="1">
                                <field name="show_treatment_gallery"/>
                                <field name="treatment_images_title" invisible="not show_treatment_gallery"/>
                            </group>
                            <group invisible="not show_treatment_gallery" col="2">
                                <field name="treatment_image_1" widget="image"/>
                                <field name="treatment_image_2" widget="image"/>
                                <field name="treatment_image_3" widget="image"/>
                                <field name="treatment_image_4" widget="image"/>
                            </group>
                        </page>
                        
                        <!-- AUTO-POPULATED SECTIONS -->
                        <page string="👨‍⚕️ Doctors and Services (Auto)" name="auto_sections">
                            <div class="alert alert-success" role="alert">
                                <strong>Auto-Populated Sections:</strong> These sections are automatically populated from your Doctor and Services masters.
                            </div>
                            
                            <!-- Doctors Section -->
                            <group string="Doctors Section Settings" col="2">
                                <group>
                                    <field name="show_doctors_section"/>
                                    <field name="doctors_section_title" invisible="not show_doctors_section"/>
                                    <field name="doctors_section_subtitle" invisible="not show_doctors_section"/>
                                </group>
                                <group>
                                    <field name="max_doctors_display" invisible="not show_doctors_section"/>
                                </group>
                            </group>
                            
                            <!-- Services Section -->
                            <group string="Services Section Settings" col="2">
                                <group>
                                    <field name="show_services_section"/>
                                    <field name="services_section_title" invisible="not show_services_section"/>
                                    <field name="services_section_subtitle" invisible="not show_services_section"/>
                                </group>
                                <group>
                                    <field name="max_services_display" invisible="not show_services_section"/>
                                </group>
                            </group>
                            
                            <!-- Testimonials -->
                            <group string="Testimonials Section" col="2">
                                <group>
                                    <field name="show_testimonials"/>
                                    <field name="testimonials_title" invisible="not show_testimonials"/>
                                </group>
                            </group>
                            
                            <!-- Contact Form -->
                            <group string="Contact Form" col="2">
                                <group>
                                    <field name="show_contact_form"/>
                                    <field name="contact_form_title" invisible="not show_contact_form"/>
                                </group>
                            </group>
                        </page>
                        
                        <!-- BOOKING SETTINGS -->
                        <page string="📅 Booking Settings" name="booking_settings">
                            <group string="Online Booking Configuration" col="2">
                                <group>
                                    <field name="enable_online_booking"/>
                                    <field name="booking_section_title" invisible="not enable_online_booking"/>
                                    <field name="booking_email_template_id" invisible="not enable_online_booking"/>
                                </group>
                            </group>
                            
                            <group string="Booking Confirmation Message" invisible="not enable_online_booking">
                                <field name="booking_confirmation_message" nolabel="1" placeholder="Thank you for booking an appointment with us. We will contact you shortly to confirm your appointment..." options="{'collaborative': true, 'resizable': true}"/>
                            </group>
                        </page>
                        
                        <!-- FOOTER and SEO -->
                        <page string="🔍 Footer and SEO" name="footer_seo">
                            <!-- Footer Settings -->
                            <group string="Footer Content" col="1">
                                <field name="footer_about" placeholder="Brief description about your clinic for footer..." options="{'collaborative': true, 'resizable': true}"/>
                                <field name="footer_quick_links" placeholder="Quick links HTML..." options="{'collaborative': true, 'resizable': true}"/>
                                <field name="copyright_text" placeholder="© 2025 Your Clinic Name. All Rights Reserved."/>
                            </group>
                            
                            <!-- SEO Settings -->
                            <group string="SEO Meta Information" col="1">
                                <field name="meta_title" placeholder="Your Clinic Name - Quality Healthcare Services"/>
                                <field name="meta_description" placeholder="Professional healthcare services with experienced doctors. Book your appointment online today."/>
                                <field name="meta_keywords" placeholder="clinic, healthcare, doctor, medical, appointment"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_clinic_website_settings_tree" model="ir.ui.view">
        <field name="name">clinic.website.settings.tree</field>
        <field name="model">clinic.website.settings</field>
        <field name="arch" type="xml">
            <list string="Website Settings" create="false" delete="false">
                <field name="name"/>
                <field name="clinic_name"/>
                <field name="theme_name"/>
                <field name="primary_color" widget="color"/>
                <field name="enable_online_booking"/>
                <field name="show_doctors_section"/>
                <field name="show_services_section"/>
                <field name="auto_fetch_company_details"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_clinic_website_settings_search" model="ir.ui.view">
        <field name="name">clinic.website.settings.search</field>
        <field name="model">clinic.website.settings</field>
        <field name="arch" type="xml">
            <search string="Website Settings">
                <field name="clinic_name"/>
                <field name="theme_name"/>
                <filter string="Online Booking Enabled" name="online_booking" domain="[('enable_online_booking', '=', True)]"/>
                <filter string="Auto Fetch Company Details" name="auto_fetch" domain="[('auto_fetch_company_details', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Theme" name="by_theme" context="{'group_by': 'theme_name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_clinic_website_settings" model="ir.actions.act_window">
        <field name="name">Website Configuration</field>
        <field name="res_model">clinic.website.settings</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure your clinic website!
            </p>
            <p>
                Set up your clinic website with dynamic themes, content management, 
                and customizable sections. Configure everything in 3 simple steps.
            </p>
        </field>
    </record>


</odoo>
