<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="clinic_management.AppointmentDashboard">
        <div class="container-fluid p-4">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">Appointment Dashboard</h2>
                <div class="d-flex align-items-center">
                    <!-- Doctor Filter -->
                    <div class="btn-group me-3" role="group">
                        <button type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown">
                            <t t-if="state.doctor_id">
                                <t t-foreach="state.doctors" t-as="doctor" t-key="doctor.id">
                                    <t t-if="state.doctor_id === doctor.id">
                                        <t t-esc="doctor.name"/>
                                    </t>
                                </t>
                            </t>
                            <t t-else="">Select Doctor</t>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#" t-on-click="(event) => this.on_doctor_change({ target: { value: '' } })">All Doctors</a></li>
                            <t t-foreach="state.doctors" t-as="doctor" t-key="doctor.id">
                                <li><a class="dropdown-item" href="#" t-on-click="(event) => this.on_doctor_change({ target: { value: doctor.id } })"><t t-esc="doctor.name"/></a></li>
                            </t>
                        </ul>
                    </div>
                    
                    <!-- Time Filter Buttons -->
                    <div class="btn-group" role="group">
                        <button type="button" t-att-class="state.time_filter === 'today' ? 'btn btn-primary' : 'btn btn-outline-primary'" t-on-click="(event) => this.on_time_filter_change('today')">Today</button>
                        <button type="button" t-att-class="state.time_filter === 'week' ? 'btn btn-primary' : 'btn btn-outline-primary'" t-on-click="(event) => this.on_time_filter_change('week')">Week</button>
                        <button type="button" t-att-class="state.time_filter === 'month' ? 'btn btn-primary' : 'btn btn-outline-primary'" t-on-click="(event) => this.on_time_filter_change('month')">Month</button>
                        <button type="button" t-att-class="state.time_filter === 'year' ? 'btn btn-primary' : 'btn btn-outline-primary'" t-on-click="(event) => this.on_time_filter_change('year')">Year</button>
                        <button type="button" t-att-class="state.time_filter === 'till_now' || state.time_filter === null ? 'btn btn-primary' : 'btn btn-outline-primary'" t-on-click="(event) => this.on_time_filter_change('till_now')">All Time</button>
                    </div>
                </div>
            </div>

            <!-- Tabs -->
            <ul class="nav nav-tabs mb-4">
                <li class="nav-item">
                    <a class="nav-link" t-att-class="state.active_tab === 'overview' ? 'active' : ''" href="#" t-on-click="(event) => this.set_active_tab('overview')">Overview</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" t-att-class="state.active_tab === 'list' ? 'active' : ''" href="#" t-on-click="(event) => this.set_active_tab('list')">Appointments</a>
                </li>
            </ul>

            <!-- Dashboard Cards -->
            <div class="row g-4 mb-4">
                <!-- Total Appointments -->
                <div class="col-md-3 col-sm-6">
                    <div class="card h-100 shadow-sm clickable-card" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;" t-on-click="(event) => this._open_list_view(null)">
                        <div class="card-body text-center">
                            <div class="d-flex align-items-center justify-content-center mb-2">
                                <i class="fa fa-calendar fa-2x me-3"></i>
                                <h2 class="mb-0 fw-bold"><t t-esc="state.total_appointments"/></h2>
                            </div>
                            <h5 class="card-title mb-2">Total Appointments</h5>
                        </div>
                    </div>
                </div>
                
                <!-- Confirmed -->
                <div class="col-md-3 col-sm-6">
                    <div class="card h-100 shadow-sm clickable-card" style="background-color: #007bff; color: white;" t-on-click="(event) => this._open_list_view('confirmed')">
                        <div class="card-body text-center">
                            <div class="d-flex align-items-center justify-content-center mb-2">
                                <i class="fa fa-check-circle fa-2x me-3"></i>
                                <h2 class="mb-0 fw-bold"><t t-esc="state.total_confirmed"/></h2>
                            </div>
                            <h5 class="card-title mb-2">Confirmed</h5>
                        </div>
                    </div>
                </div>
                
                <!-- Completed -->
                <div class="col-md-3 col-sm-6">
                    <div class="card h-100 shadow-sm clickable-card" style="background-color: #28a745; color: white;" t-on-click="(event) => this._open_list_view('completed')">
                        <div class="card-body text-center">
                            <div class="d-flex align-items-center justify-content-center mb-2">
                                <i class="fa fa-check fa-2x me-3"></i>
                                <h2 class="mb-0 fw-bold"><t t-esc="state.total_completed"/></h2>
                            </div>
                            <h5 class="card-title mb-2">Completed</h5>
                        </div>
                    </div>
                </div>
                
                <!-- Checked In -->
                <div class="col-md-3 col-sm-6">
                    <div class="card h-100 shadow-sm clickable-card" style="background-color: #17a2b8; color: white;" t-on-click="(event) => this._open_list_view('checked_in')">
                        <div class="card-body text-center">
                            <div class="d-flex align-items-center justify-content-center mb-2">
                                <i class="fa fa-user-check fa-2x me-3"></i>
                                <h2 class="mb-0 fw-bold"><t t-esc="state.total_checked_in"/></h2>
                            </div>
                            <h5 class="card-title mb-2">Checked In</h5>
                        </div>
                    </div>
                </div>
                
                <!-- In Consultation -->
                <div class="col-md-3 col-sm-6">
                    <div class="card h-100 shadow-sm clickable-card" style="background-color: #ffc107; color: white;" t-on-click="(event) => this._open_list_view('in_consultation')">
                        <div class="card-body text-center">
                            <div class="d-flex align-items-center justify-content-center mb-2">
                                <i class="fa fa-stethoscope fa-2x me-3"></i>
                                <h2 class="mb-0 fw-bold"><t t-esc="state.total_in_consultation"/></h2>
                            </div>
                            <h5 class="card-title mb-2">In Consultation</h5>
                        </div>
                    </div>
                </div>
                
                <!-- No Show -->
                <div class="col-md-3 col-sm-6">
                    <div class="card h-100 shadow-sm clickable-card" style="background-color: #fd7e14; color: white;" t-on-click="(event) => this._open_list_view('no_show')">
                        <div class="card-body text-center">
                            <div class="d-flex align-items-center justify-content-center mb-2">
                                <i class="fa fa-user-times fa-2x me-3"></i>
                                <h2 class="mb-0 fw-bold"><t t-esc="state.total_no_show"/></h2>
                            </div>
                            <h5 class="card-title mb-2">No Show</h5>
                        </div>
                    </div>
                </div>
                
                <!-- Cancelled -->
                <div class="col-md-3 col-sm-6">
                    <div class="card h-100 shadow-sm clickable-card" style="background-color: #dc3545; color: white;" t-on-click="(event) => this._open_list_view('cancelled')">
                        <div class="card-body text-center">
                            <div class="d-flex align-items-center justify-content-center mb-2">
                                <i class="fa fa-times-circle fa-2x me-3"></i>
                                <h2 class="mb-0 fw-bold"><t t-esc="state.total_cancelled"/></h2>
                            </div>
                            <h5 class="card-title mb-2">Cancelled</h5>
                        </div>
                    </div>
                </div>
                
                <!-- Total Revenue -->
                <div class="col-md-3 col-sm-6">
                    <div class="card h-100 shadow-sm" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white;">
                        <div class="card-body text-center">
                            <div class="d-flex align-items-center justify-content-center mb-2">
                                <i class="fa fa-dollar fa-2x me-3"></i>
                                <h2 class="mb-0 fw-bold"><t t-esc="state.total_revenue.toFixed(2)"/></h2>
                            </div>
                            <h5 class="card-title mb-2">Total Revenue</h5>
                        </div>
                    </div>
                </div>
            </div>

            <!-- List View -->
            <div class="mt-5 table-card">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3><t t-if="state.selected_state"><t t-esc="state.selected_state.toUpperCase().replace('_', ' ')"/> Appointments</t><t t-else="">All Appointments</t></h3>
                </div>

                <div class="table-container">
                    <table t-if="state.records.length > 0" class="table table-striped table-bordered">
                        <thead class="table-header sticky-top">
                            <tr>
                                <th>Reference</th>
                                <th>Patient</th>
                                <th>Doctor</th>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Status</th>
                                <th>Fee</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="state.records" t-as="record" t-key="record.id">
                                <tr t-on-click="(event) => this.open_appointment_form(record)" style="cursor: pointer;">
                                    <td><t t-esc="record.name"/></td>
                                    <td><t t-esc="record.patient_name || '-'"/></td>
                                    <td><t t-esc="record.doctor_name || '-'"/></td>
                                    <td><t t-esc="record.appointment_date || '-'"/></td>
                                    <td><t t-esc="record.time_slot || '-'"/></td>
                                    <td>
                                        <span t-att-class="'badge bg-' + (record.state === 'completed' ? 'success' : record.state === 'confirmed' ? 'primary' : record.state === 'checked_in' ? 'info' : record.state === 'in_consultation' ? 'warning' : record.state === 'cancelled' ? 'danger' : record.state === 'no_show' ? 'secondary' : 'light text-dark')">
                                            <t t-esc="record.state.toUpperCase().replace('_', ' ')"/>
                                        </span>
                                    </td>
                                    <td><t t-esc="record.consulting_fee.toFixed(2)"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <t t-if="state.records.length === 0">
                        <p class="text-muted p-3">No appointment records found.</p>
                    </t>
                </div>

                <!-- Pagination -->
                <t t-if="state.records.length > 0">
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <div>
                            <p class="mb-0">Showing <t t-esc="(state.current_page - 1) * state.records_per_page + 1"/> to <t t-esc="Math.min(state.current_page * state.records_per_page, state.total_records)"/> of <t t-esc="state.total_records"/> records</p>
                        </div>
                        <div>
                            <button class="btn btn-outline-primary me-2" t-att-disabled="state.current_page === 1" t-on-click="go_to_previous_page">Previous</button>
                            <button class="btn btn-outline-primary" t-att-disabled="state.current_page >= Math.ceil(state.total_records / state.records_per_page)" t-on-click="go_to_next_page">Next</button>
                        </div>
                    </div>
                </t>
            </div>

            <!-- Charts Section -->
            <div t-if="state.active_tab === 'overview'" class="mt-5 chart-card">
                <h3 class="mb-3">Appointment Status Distribution</h3>
                <div class="chart-flex">
                    <div class="chart-frame mb-3 mb-md-0 me-md-3" style="flex:1;">
                        <canvas id="appointmentPieChart"></canvas>
                    </div>
                    <div class="chart-frame" style="flex:1;">
                        <canvas id="appointmentBarChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
