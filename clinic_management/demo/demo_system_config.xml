<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Configuration Parameters -->
        <record id="clinic_allow_online_booking_param" model="ir.config_parameter">
            <field name="key">clinic_management.allow_online_booking</field>
            <field name="value">True</field>
        </record>
        
        <record id="clinic_booking_confirmation_email_param" model="ir.config_parameter">
            <field name="key">clinic_management.booking_confirmation_email</field>
            <field name="value">True</field>
        </record>
        
        <!-- Demo Department -->
        <record id="demo_department_medical" model="hr.department">
            <field name="name">Medical Department</field>
            <field name="complete_name">Springfield Medical Center / Medical Department</field>
        </record>
        
        <record id="demo_department_cardiology" model="hr.department">
            <field name="name">Cardiology</field>
            <field name="parent_id" ref="demo_department_medical"/>
            <field name="complete_name">Springfield Medical Center / Medical Department / Cardiology</field>
        </record>
        
        <record id="demo_department_dermatology" model="hr.department">
