        </record>
        
        <record id="demo_department_neurology" model="hr.department">
            <field name="name">Neurology</field>
            <field name="parent_id" ref="demo_department_medical"/>
            <field name="complete_name">Springfield Medical Center / Medical Department / Neurology</field>
        </record>
        
        <record id="demo_department_ophthalmology" model="hr.department">
            <field name="name">Ophthalmology</field>
            <field name="parent_id" ref="demo_department_medical"/>
            <field name="complete_name">Springfield Medical Center / Medical Department / Ophthalmology</field>
        </record>
        
        <record id="demo_department_psychiatry" model="hr.department">
            <field name="name">Psychiatry</field>
            <field name="parent_id" ref="demo_department_medical"/>
            <field name="complete_name">Springfield Medical Center / Medical Department / Psychiatry</field>
        </record>
        
        <!-- Update doctors with departments -->
        <record id="demo_doctor_john_smith" model="clinic.doctor">
            <field name="department" ref="demo_department_cardiology"/>
        </record>
        
        <record id="demo_doctor_sarah_brown" model="clinic.doctor">
            <field name="department" ref="demo_department_dermatology"/>
        </record>
        
        <record id="demo_doctor_michael_johnson" model="clinic.doctor">
            <field name="department" ref="demo_department_pediatrics"/>
        </record>
        
        <record id="demo_doctor_emily_davis" model="clinic.doctor">
            <field name="department" ref="demo_department_orthopedics"/>
        </record>
        
        <record id="demo_doctor_robert_wilson" model="clinic.doctor">
            <field name="department" ref="demo_department_neurology"/>
        </record>
        
        <record id="demo_doctor_lisa_garcia" model="clinic.doctor">
            <field name="department" ref="demo_department_ophthalmology"/>
        </record>
        
        <record id="demo_doctor_david_martinez" model="clinic.doctor">
            <field name="department" ref="demo_department_psychiatry"/>
        </record>
        
    </data>
</odoo>
